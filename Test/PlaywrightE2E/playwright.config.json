{
  "timeout": 30000,
  "retries": 2,
  "workers": 1,
  "reporter": [
    ["list"],
    ["html", { "outputFolder": "playwright-report" }]
  ],
  "use": {
    "baseURL": "http://localhost:5183",
    "timeout": 30000,
    "screenshot": "only-on-failure",
    "video": "retain-on-failure",
    "trace": "retain-on-failure"
  },
  "projects": [
    {
      "name": "API Tests",
      "testMatch": "**/*E2ETests.cs",
      "timeout": 60000
    }
  ]
}
