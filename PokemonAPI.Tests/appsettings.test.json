{
  "TestConfiguration": {
    "ApiSettings": {
      "BaseUrl": "https://localhost:5001",
      "TimeoutSeconds": 30,
      "RetryCount": 3,
      "EnableHttp3": true,
      "UseMinimalApis": true
    },
    "Performance": {
      "MaxResponseTimeMs": 1500,
      "MaxSearchResponseTimeMs": 2500,
      "ConcurrentRequestCount": 100,
      "SuccessRateThreshold": 0.97,
      "MaxResponseSizeBytes": 10485760,
      "EnableMetrics": true
    },
    "Authentication": {
      "EnableAuth": false,
      "TestToken": "test-jwt-token-here",
      "TestUserId": "test-user-id",
      "UseModernJwtValidation": true
    },
    "Database": {
      "UseInMemory": true,
      "ConnectionString": "Server=(localdb)\\mssqllocaldb;Database=PokemonTestDb;Trusted_Connection=true;MultipleActiveResultSets=true",
      "ResetBetweenTests": true,
      "EnableAsyncEnumerable": true
    },
    "Logging": {
      "LogLevel": "Warning",
      "EnableConsoleLogging": false,
      "LogFilePath": "TestResults/test-logs.txt",
      "EnableStructuredLogging": true,
      "UseJsonLogging": false
    },
    "TestData": {
      "SeedData": true,
      "MaxTestPokemons": 100,
      "MaxTestTrainers": 50,
      "MaxTestBattles": 25,
      "UseRecordTypes": true,
      "EnableParallelGeneration": true
    },
    "Features": {
      "EnableNet9Features": true,
      "UseTimeProvider": true,
      "EnableKeyedServices": true,
      "UseConfigurationBinder": true,
      "EnableNativeAOT": false
    }
  }
}
